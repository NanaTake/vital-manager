.wrapper
  .index-header
    .index-header__title-explain
      .index-header__title-explain__title Vital Manager
      .index-header__title-explain__explain 体重・血圧・脈拍を記録出来る健康管理アプリ
    .index-header__btn
      = link_to destroy_user_session_path, method: :delete, class: 'header-btn' do
        .btn-name
          ログアウト
    .index-header__btn
      = link_to edit_user_path(current_user), class: 'header-btn' do
        .btn-name
          ユーザー編集
    

  .index-menu
    %div.user-name
      = "#{current_user.name}  さん"
    %div.select-menu
      = link_to new_vital_path, class: 'btn' do
        = fa_icon 'pencil-square-o', class: 'icon'
        .write 新規データ作成
    %div.select-menu
      = link_to vitals_path, class: 'btn' do
        = fa_icon 'file-text-o', class: 'icon'
        .write 最近のデータ
    %div.select-menu
      = link_to user_path(current_user.id), class: 'btn' do
        = fa_icon 'files-o', class: 'icon'
        .write 過去30件のデータ
    %div.select-menu
      = link_to 'user_path(current_user.id)', class: 'btn', data:{turbolinks: :false} do
        = fa_icon 'cutlery', class: 'icon'
        .write カロリー計算
